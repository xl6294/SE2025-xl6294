{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Arduino: Compile (active sketch)",
      "type": "shell",
      "command": "arduino-cli",
      "args": [
        "compile",
        "--fqbn", "arduino:avr:uno",
        "${fileDirname}"
      ],
      "group": { "kind": "build", "isDefault": false },
      "problemMatcher": []
    },

    {
      "label": "Arduino: Upload (auto-detect port)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "arduino-cli upload -p $(${workspaceFolder}/.venv/bin/python tools/find_arduino_port.py) --fqbn arduino:avr:uno ${fileDirname}"
      ],
      "problemMatcher": []
    },

    {
      "label": "Arduino: Monitor (auto-detect port, select baud)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "arduino-cli monitor -p $(${workspaceFolder}/.venv/bin/python tools/find_arduino_port.py) -c baudrate=${input:baudRate}"
      ],
      "problemMatcher": []
    },

    {
      "label": "Logger: Run (CSV to Downloads, select baud)",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": [
        "tools/log_serial_logger.py",
        "--baud", "${input:baudRate}",
        "--sketch-name", "${fileBasename}"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "baudRate",
      "type": "pickString",
      "description": "Select baud rate",
      "options": ["9600", "19200", "38400", "57600", "115200"],
      "default": "115200"
    }
  ]
}